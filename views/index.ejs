<!DOCTYPE html>
<html lang="fr">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="/css/style.css">
<title>AfricBids</title>
</head>
<body>
<header><h1>AfricBids</h1></header>
<div class="container">
<div class="nav"><a href="/">Accueil</a> <% if(!user){ %><a href="/login">Connexion</a> <% } else { %><a href="/profile">Profil</a><a href="/logout">Déconnexion</a><% } %></div>
<h2>Enchères en cours</h2>
<div class="grid">
<% auctions.forEach(a=>{ %>
<div class="card">
<h3><%= a.title %></h3>
<p>Prix actuel: <%= a.current_price %> FCFA</p>
<p>Fin: <span id="c<%=a.id%>"></span></p>
<a href="/auction/<%=a.id%>"><button>Voir</button></a>
<script>startCountdown('c<%=a.id%>','<%=a.end_at%>');</script>
</div>
<% }) %>
</div>
</div>
<script src="/js/app.js"></script>
</body>
</html>
